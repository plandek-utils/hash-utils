{
  "name": "@plandek-utils/hash-utils",
  "version": "0.1.0",
  "exports": "./src/mod.ts",
  "tasks": {
    "release": "npx light-release && deno fmt",
    "outdated": "deno run -rA jsr:@check/deps",
    "dev": "deno test  --allow-sys --watch src/mod.ts",
    "ci": "deno test --coverage --allow-sys && deno coverage --lcov --output=cov.lcov",
    "test": "deno test --coverage --allow-sys",
    "lcov": "deno coverage --lcov --output=cov.lcov",
    "html": "genhtml -o html_cov cov.lcov"
  },
  "license": "MIT",
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/crypto": "jsr:@std/crypto@^1.0.3",
    "@std/encoding": "jsr:@std/encoding@^1.0.5",
    "@std/expect": "jsr:@std/expect@^1.0.6",
    "@std/testing": "jsr:@std/testing@^1.0.3",
    "sort-keys": "npm:sort-keys@^5.1.0"
  },
  "nodeModulesDir": "auto",
  "fmt": {
    "lineWidth": 120,
    "include": [
      "src/",
      ".release-notes/"
    ]
  },
  "lint": {
    "include": [
      "src/",
      ".release-notes/"
    ]
  },
  "publish": {
    "include": [
      "LICENSE",
      "README.md",
      "src/**/*.ts"
    ],
    "exclude": [
      "src/__tests__"
    ]
  }
}
